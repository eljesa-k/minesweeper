<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" prefHeight="700.0" prefWidth="700.0" style="-fx-border-radius: 2; -fx-background-radius: 2; -fx-background-color: #eef0f2;" xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.minesweepergame.WelcomeScreen.WelcomeView">
   <children>
      <ImageView fitHeight="187.0" fitWidth="332.0" pickOnBounds="true" preserveRatio="true" style="-fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 );">
         <image>
            <Image url="@/into.jpg" />
         </image>
         <VBox.margin>
            <Insets top="30.0" />
         </VBox.margin>
      </ImageView>
      <TextField fx:id="typeNameField" alignment="TOP_CENTER" nodeOrientation="LEFT_TO_RIGHT" prefHeight="34.0" prefWidth="641.0" promptText="Please type your name here" style="-fx-max-width: 250; -fx-max-height: 50; -fx-background-radius: 5; -fx-border-radius: 5; -fx-cursor: TEXT; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 );">
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <VBox.margin>
            <Insets top="15.0" />
         </VBox.margin>
         <font>
            <Font size="16.0" />
         </font>
      </TextField>
      <VBox alignment="TOP_CENTER">
         <children>
            <Button fx:id="easyButton" mnemonicParsing="false" onAction="#startGameEasyAction" prefHeight="0.0" prefWidth="100.0" style="-fx-max-width: 100; -fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 ); -fx-background-color: #4fbcff; -fx-text-fill: #eef0f2; -fx-cursor: HAND;" text="Easy">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font name="System" size="16.0" />
               </font>
            </Button>
            <Button fx:id="mediumButton" mnemonicParsing="false" onAction="#startGameMediumAction" style="-fx-max-width: 100; -fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 ); -fx-background-color: #4fbcff; -fx-text-fill: #eef0f2; -fx-cursor: HAND;" text="Medium">
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
            <Button fx:id="hardButton" mnemonicParsing="false" onAction="#startGameHardAction" style="-fx-max-width: 100; -fx-background-radius: 5; -fx-border-radius: 5; -fx-effect: dropshadow( three-pass-box , rgba(0,0,0,0.6) , 5, 0.0 , 0 , 1 ); -fx-background-color: #4fbcff; -fx-text-fill: #eef0f2; -fx-cursor: HAND;" text="Hard">
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
            </Button>
         </children>
      </VBox>
   </children>
</VBox>
